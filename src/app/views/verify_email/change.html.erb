<% content_for :title, "メールを変更" %>

<h1>メールを変更</h1>

<p>新しいメールを入力してください。</p>

<%= form_with(model: @current_account, url: verify_email_change_path, method: :patch, data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: @current_account %>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

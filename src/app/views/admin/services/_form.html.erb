<%= form_with(model: [:admin, service], data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: service %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :name_id, style: "display: block" %>
    <%= form.text_field :name_id %>
  </div>

  <div>
    <%= form.label :overview, style: "display: block" %>
    <%= form.text_area :overview %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :host, style: "display: block" %>
    <%= form.text_field :host %>
  </div>

  <div>
    <%= form.label :redirect_uris, style: "display: block" %>
    <%= form.text_area :redirect_uris, value: JSON.pretty_generate(service.redirect_uris) %>
  </div>

  <div>
    <%= form.label :scopes, style: "display: block" %>
    <%= form.text_area :scopes, value: JSON.pretty_generate(service.scopes) %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Service.statuses.keys.map { |k| [t("activerecord.enums.service.status.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

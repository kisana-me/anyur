<%= form_with(model: [:admin, document], data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: document %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :name_id, style: "display: block" %>
    <%= form.text_field :name_id %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.textarea :summary %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.textarea :content %>
  </div>

  <div>
    <%= form.label :published_at, style: "display: block" %>
    <%= form.datetime_field :published_at %>
  </div>

  <div>
    <%= form.label :visibility_status, style: "display: block" %>
    <%= form.select :visibility_status, Document.visibility_statuses.keys.map { |k| [t("activerecord.enums.document.visibility_status.#{k}"), k] }, {} %>
  </div>

  <div>
    <%= form.label :deleted, style: "display: block" %>
    <%= form.checkbox :deleted %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

<% content_for :title, "Sing up to ANYUR" %>

<h1>Sign up to ANYUR</h1>
<p>アカウントを作成します。</p>

<h2>入力内容を確認してください</h2>

<div data-controller="turnstile"
     data-turnstile-environment-value="<%= Rails.env %>"
     data-turnstile-sitekey-value="<%= ENV.fetch("CLOUDFLARE_TURNSTILE_SITE_KEY") %>">
<%= form_with model: @account, url: signup_2_path, data: { turbo: false } do |f| %>
  <%= render "shared/error_messages", instead: @account %>
  <%= f.label :name, "名前", class: "" %>
  <%= f.text_field :name, disabled: true, class: "" %>
  <br />
  <%= f.label :name_id, "ID", class: "" %>
  <%= f.text_field :name_id, disabled: true, class: "" %>
  <br />
  <%= f.label :email, "メール", class: "" %>
  <%= f.email_field :email, disabled: true, class: "" %>
  <br />
  <%= f.label :terms_agreed, "利用規約とプライバシーポリシーに同意する", class: "" %>
  <%= f.check_box :terms_agreed, disabled: true, class: "" %>
  <br />
  <%= f.label :password_confirmation, "パスワード(確認)", class: "" %>
  <%= f.password_field :password_confirmation, class: "" %>
  <br />
  <div class="cf-turnstile" data-turnstile-target="widget"></div>
  <br />
  <%= f.submit "作成", data: { turnstile_target: "submit" }, disabled: true %>
<% end %>
</div>

<br />

<%= button_to("戻る", signup_path, method: :get, data: { turbo: false }) %>
<p>アカウントをお持ちならば、<%= link_to(signin_path) do %>Sign in<% end %>。</p>

  position: relative;
}

.loading-bar::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 30%;
  background-color: var(--primary-500);
  border-radius: var(--radius-full);
  animation: loading 2s var(--easing-standard) infinite;
}

.checkmark {
  width: 48px;
  height: 48px;
  border-radius: 50%;
  background-color: var(--success-500);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  opacity: 0;
  transform: scale(0);
  animation: checkmarkAppear 2s var(--easing-decelerate) 1.5s infinite;
}

.checkmark::before {
  content: '';
  width: 24px;
  height: 12px;
  border-bottom: 3px solid white;
  border-left: 3px solid white;
  transform: rotate(-45deg) translate(2px, -5px);
}

@keyframes pulse {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.05);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes loading {
  0% {
    left: -30%;
  }
  100% {
    left: 100%;
  }
}

@keyframes checkmarkAppear {
  0%, 50% {
    opacity: 0;
    transform: scale(0);
  }
  60% {
    opacity: 1;
    transform: scale(1.2);
  }
  70% {
    transform: scale(0.9);
  }
  80% {
    transform: scale(1);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}


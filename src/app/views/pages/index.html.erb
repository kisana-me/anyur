  color: var(--primary-600);
}

.stat-label {
  font-size: 0.875rem;
  color: var(--neutral-600);
}

.hero-image {
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 50%;
  height: 100%;

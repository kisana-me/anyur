<% content_for :title, "アカウントを作成" %>

<h1>アカウントを作成</h1>

<%= form_with(model: @account) do |form| %>
  <% render 'shared/error_messages', instead: @account %>
  <div>
    <%= form.label :name, '名前', style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email, 'メールアドレス', style: "display: block" %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.check_box :agreement %>
    <%= form.label :agreement do %>
      <%= link_to('利用規約', terms_path) %>
      と
      <%= link_to('プライバシーポリシー', privacy_path) %>
      に同意する。
    <% end %>
  </div>
  <div>
    <%= form.submit '送信' %>
  </div>
<% end %>


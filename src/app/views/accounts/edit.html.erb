<% content_for :title, "登録情報を変更" %>

<h1>登録情報を変更</h1>
<%= form_with(model: @current_account, url: account_edit_path, data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: @current_account %>

  <div>
    <%= form.label :aid, style: "display: block" %>
    <%= form.text_field :aid, disabled: true %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :name_id, style: "display: block" %>
    <%= form.text_field :name_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
<h2>メールを変更</h2>
<p>現在のパスワードが必要です。</p>
<% if @current_account.email_verified %>
<p>新しいメールに認証コードを送信して確認します。</p>
<% end %>
<%= link_to "メールを変更", account_email_edit_path %>
<h2>パスワードを変更</h2>
<% if @current_account.email_verified %>
<p>認証済みのメールに認証コードをお送りします。</p>
<% else %>
<p>現在のパスワードが必要です。</p>
<% end %>
<%= link_to "パスワードを変更する", account_password_edit_path %>

<% content_for :title, "メールを変更" %>

<h1>メールを変更</h1>
<%= form_with(model: @current_account, url: account_email_update_path, data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: @current_account %>

  <div>
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password, value: @account.password %>
  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email, value: @account.email %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

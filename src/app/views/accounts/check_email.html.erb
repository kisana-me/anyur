<% content_for :title, "認証コードを入力してメールを変更" %>

<h1>認証コードを入力してメールを変更</h1>
<%= form_with(model: @ep_form, url: account_email_update_path, method: :patch, data: { turbo: false }) do |form| %>
  <%= render "shared/error_messages", instead: @ep_form %>

  <div>
    <%= form.label :authentication_code, style: "display: block" %>
    <%= form.text_field :authentication_code, pattern: "\\d{6}", required: true, maxlength: 6, autofocus: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>